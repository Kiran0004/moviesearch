class DialogUtils {

    companion object {
        const val KEY_URL = "url"
        @JvmStatic
        fun showDialogOnGoingMaintenance(backendInterruption: BackendConfig.BackendInterruption?, context: Context) {
            showOnGoingMaintenanceDialog(backendInterruption, context)
        }

        private fun showOnGoingMaintenanceDialog(backendInterruption: BackendConfig.BackendInterruption?, context: Context) {

            val dialogBuilder = AlertDialog.Builder(context, R.style.DialogTheme)
            val inflater: LayoutInflater = LayoutInflater.from(context)
            val dialogView = inflater.inflate(R.layout.fragment_appointment_popup, null)
            dialogBuilder.setView(dialogView)
            dialogView.appointmentPopUpTitle.text = backendInterruption?.title
            val endTimeVal = backendInterruption?.endDateTime
            val startTimeVal = backendInterruption?.startDateTime
            var data: String? = backendInterruption?.messageHtml
            data = data?.replace("<\\br>", "\n")
            var span: SpannableString = SpannableString(data)
            dialogView.appointmentPopUpBody.text = span
            Linkify.addLinks(dialogView.appointmentPopUpBody, Linkify.ALL)
            dialogView.appointmentPopUpUrl.text = backendInterruption?.topBtnTitle
            dialogView.appointmentPopUpUrl.paintFlags = Paint.UNDERLINE_TEXT_FLAG
            dialogView.appointmentPopUpUrl.setOnClickListener {
                WebviewUtil.openDefaultBrowser(context, backendInterruption?.topBtnUrl)
            }
            dialogView.btnAccept.text = backendInterruption?.btnTitle
            dialogView.btnAccept.setOnClickListener {
                WebviewUtil.openDefaultBrowser(context, backendInterruption?.btnUrl)
            }
            val onGoingPopup: AlertDialog = dialogBuilder.create()
            onGoingPopup.setCancelable(false)
            onGoingPopup.show()
            Handler().postDelayed({
                onGoingPopup.dismiss()
            }, (endTimeVal?.minus(startTimeVal!!))!! * 1000)
        }
}
}
